<%- include('partials/header', { headTitle: headTitle }) %>
<%- include('partials/menu', { menuLinks: menuLinks, activeLinkPath: activeLinkPath }) %>

<h1 class="heading"><%= headTitle %></h1>

<form class="form" action="/add-product" method="POST">
  <div class="form__group">
    <label for="title" class="form__label">Nazwa produktu:</label>
    <input type="text" id="title" name="title" class="form__input" value="<%= data.title %>" required>
  </div>
  <div class="form__group">
    <label for="price" class="form__label">Cena:</label>
    <input type="number" id="price" name="price" class="form__input" value="<%= data.price %>" required>
  </div>
  <button type="submit" class="button">Dodaj produkt</button>
</form>

<%- include('partials/footer') %>